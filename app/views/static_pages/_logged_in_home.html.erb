<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="post_form">
      <% provide(:title, "New post") %>
      <% provide(:form_url, posts_path(@post)) %>
      <%= render 'shared/post_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Posts</h3>
    <%= render 'shared/feed' %>
  </div>
</div>

<% provide(:title, "Edit user") %>
<% provide(:button_text, 'Save changes') %>
<% provide(:form_url, user_path(@user)) %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Update your profile</h1>
      <%= render 'form' %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" rel="noopener noreferrer" target="_blank">Change</a>
      </div>
    </div>
  </div>
</div>

<li id= "post-<%= post.id %>">
  <div class="row vertical-align post_tab">
    <div class="col-md-3 xs_sm_text_center"> 
      <% if post.main_image.present? %>
        <%= link_to image_tag(post.main_image.last.file.thumb, class: "tab_img"), post_path(post) %>
      <% else %>
        <%= link_to image_tag('logo.png', size: "187x145", class: "tab_img"), post_path(post) %>
      <% end %>
    </div>
    <div class="col-md-9 xs_sm_text_center">
      <h2><%= link_to post.title, post_path(post)%></h2>
      <div class="author_box">
        <span class = "user" style="display:inline-block; margin: 0px"><%= link_to post.user.name, post.user %></span>
        <span class = "timestamp" style="display:inline-block; margin: 0px"> | <%= time_ago_in_words(post.created_at) %> ago. </span>
        <span class = "tags" style="display:inline-block; margin: 0px"> | Tags: <%=raw tag_links(post.all_tags) %></span>
      </div>
      <span class = "timestamp">
        <% if current_user?(post.user) %>
          <%= link_to "edit", edit_post_path(post) %>
          <%= link_to "delete", post, method: :delete,
                                      data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </div>
  </div>
</li>
